<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#7E57C2"/> <!-- Color de fondo para el estado normal -->
            <corners android:radius="24dp"/> <!-- Redondeo de esquinas -->
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#673AB7"/> <!-- Color de fondo para el estado presionado -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>
