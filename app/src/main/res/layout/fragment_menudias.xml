<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:context=".MenuDias">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />


    <Button
        android:id="@+id/btnDomingoRamos"
        style="@style/MenuButton"
        android:text="Domingo de Ramos" />

    <Button
        android:id="@+id/btnLunesSanto"
        style="@style/MenuButton"
        android:text="Lunes Santo" />

    <Button
        android:id="@+id/btnMartesSanto"
        style="@style/MenuButton"
        android:text="Martes Santo" />

    <Button
        android:id="@+id/btnMiercolesSanto"
        style="@style/MenuButton"
        android:text="Miércoles Santo" />

    <Button
        android:id="@+id/btnJuevesSanto"
        style="@style/MenuButton"
        android:text="Jueves Santo" />

    <Button
        android:id="@+id/btnMadruga"
        style="@style/MenuButton"
        android:text="Madruga" />

    <Button
        android:id="@+id/btnViernesSanto"
        style="@style/MenuButton"
        android:text="Viernes Santo" />

    <Button
        android:id="@+id/btnSabadoSanto"
        style="@style/MenuButton"
        android:text="Sábado Santo" />

    <Button
        android:id="@+id/btnDomingoResurreccion"
        style="@style/MenuButton"
        android:text="Domingo de Resurrección" />

    <Button
        android:id="@+id/btnTodasLasHermandades"
        style="@style/MenuButton"
        android:text="Todas las Hermandades" />

    <Button
        android:id="@+id/btnMisFavoritasCerrarSesion"
        style="@style/BotonInicio"
        android:text="Mis Favoritas / Cerrar Sesión" />


    </LinearLayout>
</ScrollView>


